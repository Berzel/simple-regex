{
  "name": "simple-regex",
  "version": "0.0.1",
  "description": "A simple library with common Zimbabwean regex patterns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json", 
    "prepare": "npm run build", 
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint", 
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldera/simple-regex.git"
  },
  "keywords": ["Regex", "Zimbabwe", "Validation"],
  "author": "Michael Dera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaeldera/simple-regex/issues"
  },
  "homepage": "https://github.com/michaeldera/simple-regex#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
